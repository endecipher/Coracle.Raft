@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row raftStateMachine">
        <div class="col-3">
            <button type="button" class="btn-success" id="readyBtn" onclick="readyCoracle()">Ready Coracle</button>
        </div>

        <div><hr/></div>
    </div>

    <div class="row coraclePropertyContainer">
        <div class="col-2">
            <pre>Term: </pre><span id="coracleTerm" class="coracleTerm" style="padding: 2em"></span>
            <pre style="padding-top: 1em;">CommitIndex: </pre><span id="coracleCommitIndex" class="coracleCommitIndex" style="padding: 2em"></span>
            <pre style="padding-top: 1em;">LastApplied: </pre><span id="coracleLastApplied" class="coracleLastApplied" style="padding: 2em"></span>
        </div>
        <div class="col-1">

        </div>
        <div class="col-2">
            <pre>VotedFor: </pre><span id="coracleVotedFor" class="coraclVotedForm" style="padding: 2em"></span>
            <pre style="padding-top: 1em;">Cluster: </pre><ul type="square" id="coracleCluster" class="coracleCluster" style="padding: 0.5em; padding-left: 2em;"></ul>
            <pre style="padding-top: 1em;">State: </pre><b><span id="coracleState" class="coracleState" style="padding: 2em"></span></b>
        </div>
        <div class="col-1">

        </div>
        <div class="col-2 noteSection" style="display: none;">
            <div class="row" style="padding: 1em">
                <input type="text" id="addNoteHeader" placeholder="NoteId"/>
            </div>
            <div class="row" style="padding: 1em">
                <input type="text" id="addNoteText" placeholder="Text"/> 
            </div>
            <div class="row" style="padding: 1em">
                <button type="button" class="btn-secondary" id="addNoteBtn" onclick="addNote()">Add Note</button>
            </div>
            <div class="row" style="padding: 1em">
                <div class="addNoteSpinner" style="display: none;">
                    <center><i class="fa fa-spinner fa-spin" style="font-size:2em;"></i></center>
                </div>
                <div id="addNoteResult" class="row" style="color: darkblue">

                </div>
            </div>
        </div>
        <div class="col-1">
            
        </div>
        <div class="col-2 noteSection" style="display: none;">
            <div class="row" style="padding: 1em">
                <input type="text" id="getNoteHeader" placeholder="NoteId"/>
            </div>
            <div class="row" style="padding: 1em">
                <button type="button" class="btn-secondary" id="getNoteBtn" onclick="getNote()">Get Note</button>
            </div>
            <div class="row" style="padding: 1em">
                <div class="getNoteSpinner" style="display: none;">
                    <center><i class="fa fa-spinner fa-spin" style="font-size:2em;"></i></center>
                </div>
                <div id="getNoteResult" class="row" style="color: darkblue">

                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>

    <div><hr/></div>

    <div class="row coracleUpdates overflow">
        <div class="col-1">
            <div class="row"><pre>Next[]</pre></div>
            <div class="row panel nextIndicesPanel" style="overflow-y: auto; overflow-x: hidden; height: 10em">
                <ul id="coracleNextIndices"></ul>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-1">
            <div class="row"><pre>Match[]</pre></div>
            <div class="row panel matchIndicesPanel" style="overflow-y: auto; overflow-x: hidden; height: 10em">
                <ul id="coracleMatchIndices"></ul>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-8">
            <div class="row"><pre>Log[]</pre></div>
            <div class="row panel raftEntryPanel" style="overflow-y: auto; overflow-x: hidden; height: 10em">
                <ul type="circle" id="raftEntries"></ul>
            </div>
        </div>
    </div>

    <div><hr/><br/><span style="display:flex; justify-content:center"><pre>Activity Logger</pre><br/></span></div>

    <div class="row activityLogging" style="overflow-y: auto; overflow-x: hidden; height: 20em">
        <ol id="logList" style="padding-left: 4em; padding-right: 4em;"></ol>
    </div>

</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/log.js"></script>
<script src="~/js/raftEntry.js"></script>
<script src="~/js/readyCoracle.js"></script>
<script src="~/js/addNote.js"></script>
<script src="~/js/getNote.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
